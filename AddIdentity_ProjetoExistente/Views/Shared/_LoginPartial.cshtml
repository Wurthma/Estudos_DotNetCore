@inject SignInManager<ApplicationUser> SignManager
@inject UserManager<ApplicationUser> UserManager

@if (SignManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <div class="btn-group" role="group" aria-label="login usuário">
            <a asp-area="" asp-controller="Manage" asp-action="Index" class="btn btn-outline-info" title="Manage">Olá @UserManager.GetUserName(User)!</a>
            <button type="submit" class="btn btn-outline-info">Logout</button>
        </div>
    </form>
}
else
{
    <div class="form-inline mt-2 mt-md-0">
        <a class="btn btn-outline-info my-2 my-sm-0 mr-2" asp-area="" asp-controller="Account" asp-action="Register">Registrar</a>
        <a class="btn btn-outline-info my-2 my-sm-0 mr-2" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
    </div>
}
